    }

    /* The navigation menu links */
    .permBar a {
        padding: 6px 8px 6px 0px;
        text-decoration: none;
        font-size: 11px;
        color: black;
        display: block;
        width: 110px;

    }

    /* The sidebar menu */
    .accountDropdown {
        height: 366px; /* Full-height: remove this if you want "auto" height */
        width: 208px; /* Set the width of the sidebar */
        position: fixed; /* Fixed Sidebar (stay in place on scroll) */
        top: 64px; /* Stay at the top */
        right: 93px;
        background-color: white; /* Black */
        text-align: left;
        border: 1px solid #cec0c0;
        box-shadow: -8px -9px 10px -10px rgba(0, 0, 0, 0.51);
        border-radius: 2px;

        /*overflow: hidden;*/
        z-index: 9999999; /* Stay on top */
    }

    .accountDropdown:after,
    .accountDropdown:after {
        z-index: -1;
        position: absolute;
        top: -3.9%;
        left: 100%;
        margin-left: -25%;
        content: '';
        width: 0;
        height: 0;
        border-bottom: solid 15px #ffffff;
        border-left: solid 15px transparent;
        border-right: solid 15px transparent;
    }

    .accountDropdown:before,
    .accountDropdown:before {
        z-index: -1;
        position: absolute;
        top: -3.9%;
        left: 100%;
        margin-left: -25%;
        content: '';
        width: 0;
        height: 0;
        border-bottom: solid 15px #908e8e;
        border-left: solid 15px transparent;
        border-right: solid 15px transparent;

    }

    /* The navigation menu links */
    .accountDropdown a {
        padding: 6px 8px 6px 0px;
        text-decoration: none;
        font-size: 13px;
        color: #828282;
        display: block;
        width: 100%;
        margin-left:25px;
    }

    .switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 23px;
    }

    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
    }

    .slider:before {
        position: absolute;
        content: "";
        height: 15px;
        width: 15px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        -webkit-transition: .4s;
        transition: .4s;
    }

    input:checked + .slider {
        background-color: #2196F3;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #2196F3;
    }

    input:checked + .slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
    }

    /* Rounded sliders */
    .slider.round {
        border-radius: 34px;
    }

    .slider.round:before {
        border-radius: 50%;
    }

